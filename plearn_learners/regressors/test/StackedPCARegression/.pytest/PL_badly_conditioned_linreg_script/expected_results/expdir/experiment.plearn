*4 -> PTester(
    dataset = *1 -> AutoVMatrix(
        inputsize = 4,
        specification = "PLEARNDIR:examples/data/test_suite/linear_4x_2y.amat",
        targetsize = 2,
        weightsize = 0
        ),
    expdir = "expdir",
    learner = *2 -> LinearRegressor( ),
    provide_learner_expdir = 1,
    save_test_confidence = 1,
    save_test_costs = 1,
    save_test_outputs = 1,
    splitter = *3 -> FractionSplitter(
        splits = 1 2 [
                0:0.75,
                0.75:1
                ]
        ),
    statnames = [
        "E[train.E[mse]]",
        "E[train.E[aic]]",
        "E[train.E[bic]]",
        "E[train.E[mabic]]",
        "E[test.E[mse]]",
        "E[test.E[aic]]",
        "E[test.E[bic]]",
        "E[test.E[mabic]]"
        ]
    )
