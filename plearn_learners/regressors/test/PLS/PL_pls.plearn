PTester(
    expdir = "expdir";

    dataset = AutoVMatrix(
        specification =
            "PLEARNDIR:examples/data/test_suite/linear_4x_2y.amat",
        inputsize = 4,
        targetsize = 2,
        weightsize = 0
    )

    splitter =
        RepeatSplitter(
            do_not_shuffle_first = 0  ;
            n = 1  ;
            seed = 456393422  ;
            shuffle = 1  ;
            to_repeat =
                FractionSplitter(
                    splits = 1 4 [
                        0:0.4489
                        0.67:1
                        0.4489:0.67
                        0:0.4489
                    ]
                )
        );

    statnames = [ "E[test1.E[mse]]" "E[test2.E[mse]]" "E[test3.E[mse]]" ]

    provide_learner_expdir = 1;

    learner =
        AddCostToLearner (
            verbosity = 1
            report_progress = 1
            costs = [
                "mse"
            ]
            learner =
                PLS(
                    k = 2  ;
                    output_the_score = 0  ;
                    output_the_target = 1  ;
                    precision = 1e-6  ;
                    verbosity = 1
                    report_progress = 1
                ) 
            check_output_consistency = 0
            rescale_output = 0
        )

    save_test_outputs = 0;
    save_data_sets =0;
    save_initial_tester = 0;
    save_stat_collectors = 0;
    save_learners = 0

); 



